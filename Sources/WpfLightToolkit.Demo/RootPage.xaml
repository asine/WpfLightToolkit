<LightContentPage x:Class="WpfLightToolkit.Demo.RootPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Title="Main Page"
             HasNavigationBar="False"
             mc:Ignorable="d" >
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Content Page Demo" Width="600" Height="50" Click="BtnContentPageDemo_Clicked" Margin="0,0,0,10" />
        <Button Content="Tabbed Page Demo" Width="600" Height="50" Click="BtnTabbedPageDemo_Clicked" Margin="0,0,0,10" />
        <Button Content="Carousel Page Demo" Width="600" Height="50" Click="BtnCarouselPageDemo_Clicked" Margin="0,0,0,10" />
        <Button Content="Navigation Page Demo" Width="600" Height="50" Click="BtnNavigationPageDemo_Clicked" Margin="0,0,0,10" />
        <Button Content="MasterDetail Page Demo" Width="600" Height="50" Click="BtnMasterDetailPageDemo_Clicked" Margin="0,0,0,10" />
        <Button Content="Show Modal" Width="600" Height="50" Click="BtnShowModalDemo_Clicked" Margin="0,0,0,10" />
    </StackPanel>
</LightContentPage>
