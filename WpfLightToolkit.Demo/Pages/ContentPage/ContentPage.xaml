<LightContentPage x:Class="WpfLightToolkit.Demo.Pages.ContentPage.ContentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Title="Content Page - Title"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    
    <LightContentPage.SecondaryTopBarCommands>
        <LightAppBarButton Label="Home" Click="Home_Click">
            <LightAppBarButton.Icon>
                <LightSymbolIcon Symbol="Home" />
            </LightAppBarButton.Icon>
        </LightAppBarButton>
    </LightContentPage.SecondaryTopBarCommands>

    <Grid>
        <TextBlock Text="Content Page" FontSize="32" Foreground="Black"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
     </Grid>
</LightContentPage>

